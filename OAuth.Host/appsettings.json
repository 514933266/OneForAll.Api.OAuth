{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "Default": "Data Source=.; Initial Catalog=OneForAll.Base; User Id=OneForAll; Password=OneForAll;Trust Server Certificate=true",
    "IdentityServer": "Data Source=.; Initial Catalog=OneForAll.IdentityServer; User Id=OneForAll; Password=OneForAll;Trust Server Certificate=true"
  },
  "LoginSetting": {
    "BanTime": "20",
    "MaxPwdErrCount": "5"
  },
  "App": {
    "ClientId": "OneForAll",
    "ClientSecret": "OneForAll",
    "ClientName": "授权登录",
    "ClientCode": "OneForAll.OAuth"
  },
  "IdentityServer": {
    "ApiResources": [ "admin" ],
    "Clients": [
      {
        "Id": "OneForAll",
        "Name": "OneForAll",
        "Secret": "OneForAll",
        "Role": "admin"
      },
      {
        "Id": "WechatClient",
        "Name": "微信客户端",
        "Secret": "OneForAll",
        "Role": "admin",
        "IsWechat": true
      }
    ]
  },
  "Redis": {
    "InstanceName": "OAuth:",
    "ConnectionString": "127.0.0.1:6379"
  },
  "Cors": {
    "Origins": [ "*" ]
  },
  // 腾讯云短信
  "TxCloudSms": {
    "TemplateId": "",
    "SignName": ""
  },
  // 手机登录root账号，不配置则不生效
  "MobileRootAccount": {
    "UserName": "",
    "Code": ""
  },
  // Http请求服务地址
  "HttpService": {
    "WxmpLogin2Session": "https://api.weixin.qq.com/sns/jscode2session",
    "WxmpAccessToken": "https://api.weixin.qq.com/cgi-bin/token",
    "WxmpPhoneNumber": "https://api.weixin.qq.com/wxa/business/getuserphonenumber",
    "IdentityServer4Login": "http://localhost:51512/connect/token",
    "TxCloudSms": "http://ums.api.localhost:51512/api/TxCloudSms",
    "ScheduleJob": "http://job.api.localhost:51512/api/ScheduleJobs"
  },
  // 定时任务
  "Quartz": {
    "AppId": "OneForAll.OAuth",
    "AppSecret": "OneForAll",
    "GroupName": "登录服务",
    "NodeName": "本地",
    "ScheduleJobs": [
      {
        "TypeName": "RefreshWxmpAccessTokenJob",
        "Corn": "0 0/1 * * * ?",
        "Remark": "刷新微信小程序调用凭证,每分钟执行一次"
      }
    ]
  }
}