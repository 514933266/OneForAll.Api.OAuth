{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "Default": "Data Source=.; Initial Catalog=OneForAll.Base; User Id=OneForAll; Password=OneForAll;Trust Server Certificate=true",
    "IdentityServer": "Data Source=.; Initial Catalog=OneForAll.IdentityServer; User Id=OneForAll; Password=OneForAll;Trust Server Certificate=true"
  },
  "LoginSetting": {
    "BanTime": "20",
    "MaxPwdErrCount": "5"
  },
  "App": {
    "ClientId": "OneForAll",
    "ClientSecret": "OneForAll",
    "ClientName": "登录授权服务",
    "ClientCode": "OneForAll.OAuth"
  },
  "IdentityServer": {
    "ApiResources": [ "admin" ],
    "Clients": [
      {
        "Id": "OneForAll",
        "Name": "OneForAll",
        "Secret": "OneForAll",
        "Role": "admin"
      },
      {
        "Id": "OneForAllWechat",
        "Name": "OneForAllWechat",
        "Secret": "OneForAllWechat",
        "Role": "admin",
        "IsWechat": true
      }
    ]
  },
  "Redis": {
    "InstanceName": "OAuth:",
    "ConnectionString": "127.0.0.1:6379"
  },
  "Cors": {
    "Origins": [ "*" ]
  },
  // 腾讯云短信发送配置
  "TxCloudSms": {
    "AppId": "",
    "SecretId": "",
    "SecretKey": "",
    "TemplateId": "",
    "SignName": ""
  },
  // 手机登录默认账号，提供给微信审核人员测试
  "MobileRootAccount": {
    "UserName": "",
    "Code": ""
  },
  // Http请求
  "HttpService": {
    // 微信相关
    "WxmpLogin2Session": "https://api.weixin.qq.com/sns/jscode2session",
    "WxmpAccessToken": "https://api.weixin.qq.com/cgi-bin/token",
    "WxmpPhoneNumber": "https://api.weixin.qq.com/wxa/business/getuserphonenumber",
    // 登录
    "IdentityServer4Login": "https://oauth.api.fengwoyun.net/connect/token",
    // 腾讯云短信
    "TxCloudSms": "https://ums.api.fengwoyun.net/api/TxCloudSms",
    // 定时任务注册中心
    "ScheduleJob": "https://job.api.fengwoyun.net/api/ScheduleJobs"
  },
  // 定时任务
  "Quartz": {
    "AppId": "OneForAll.OAuth",
    "AppSecret": "OneForAll",
    "GroupName": "登录授权服务",
    "NodeName": "https://oauth.api.fengwoyun.net",
    "ScheduleJobs": [
      {
        "TypeName": "RefreshWxmpAccessTokenJob",
        "Corn": "0 0/1 * * * ?",
        "Remark": "刷新微信小程序调用凭证,每30分钟执行一次"
      }
    ]
  }
}